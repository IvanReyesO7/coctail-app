<div class="showimg mb-6" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
  <h2><%=@cocktail.name%></h2>
    <div class="d-flex">
    <i><%= link_to "Edit", edit_cocktail_path, class:"far fa-edit" %></i>
  </div>
</div>
<div class="container mt-3 pads">
  <h2 class="h1title">What you will need</h2>
  <% @cocktail.doses.each do |dose| %>
    <p><i class="fas fa-cocktail"></i><b><%=dose.ingredient.name%></b> - <%= dose.description %>   <i class="nanda"><%= link_to "", dose_path(dose), method: :delete, class:"fas fa-trash" %></i></p>
  <% end %>
  <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class:"btn btn-outline-dark" %>
  <%= link_to "Delete this cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-dark"  %>
</div>