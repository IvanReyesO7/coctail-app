<div class="container mt-3">
  <div class="d-flex">
    <h2><%=@cocktail.name%></h2>
    <i><%= link_to "", edit_cocktail_path, class:"far fa-edit" %></i>
  </div>
  <% @cocktail.doses.each do |dose| %>
    <p><i class="fas fa-cocktail"></i><b><%=dose.ingredient.name%></b> - <%= dose.description %>   <i><%= link_to "", dose_path(dose), method: :delete, class:"fas fa-trash" %></i></p>
  <% end %>
  <%= link_to "Delete", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-outline-danger"  %>
  <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class:"btn btn-outline-success" %>
</div>